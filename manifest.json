{
    "name": "Screenshot extension",
    "version": "1.0",
    "description": "screenshot extension",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "cam.png",
        "default_title": "Take a screen shot!"
    },
    "icons": {
        "16":  "cam.png",
        "32":  "cam.png",
        "64":  "cam.png",
        "128": "cam.png"
    },
    "permissions": [
        "activeTab"
    ],
    "manifest_version": 2
}